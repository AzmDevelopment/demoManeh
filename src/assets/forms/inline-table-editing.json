{
  "key": "orderItems",
  "type": "repeat",
  "templateOptions": {
    "label": "Order Items - Inline Table",
    "addText": "➕ Add Item",
    "removeText": "❌ Remove"
  },
  "fieldArray": {
    "fieldGroupClassName": "table-row",
    "fieldGroup": [
      {
        "key": "productName",
        "type": "input",
        "className": "col-4",
        "templateOptions": {
          "label": "Product",
          "required": true
        }
      },
      {
        "key": "quantity",
        "type": "input",
        "className": "col-2",
        "templateOptions": {
          "label": "Qty",
          "type": "number",
          "min": 1,
          "required": true
        }
      },
      {
        "key": "unitPrice",
        "type": "input",
        "className": "col-3",
        "templateOptions": {
          "label": "Unit Price",
          "type": "number",
          "min": 0,
          "step": "0.01",
          "required": true
        }
      },
      {
        "key": "total",
        "type": "input",
        "className": "col-2",
        "templateOptions": {
          "label": "Total",
          "disabled": true
        },
        "expressionProperties": {
          "model.total": "model.quantity * model.unitPrice || 0"
        }
      },
      {
        "key": "taxable",
        "type": "checkbox",
        "className": "col-1",
        "templateOptions": {
          "label": "Tax?"
        }
      }
    ]
  }
}



{
  "key": "employees",
  "type": "table",
  "templateOptions": {
    "label": "Employee Records",
    "columns": [
      { "key": "name", "label": "Employee Name", "type": "input", "width": "30%" },
      { "key": "department", "label": "Department", "type": "select", "width": "25%" },
      { "key": "salary", "label": "Salary (USD)", "type": "number", "width": "20%" },
      { "key": "active", "label": "Active", "type": "checkbox", "width": "10%" },
      { "key": "actions", "label": "Actions", "type": "actions", "width": "15%" }
    ],
    "addButton": "➕ Add Employee",
    "removeButton": true,
    "editable": true
  },
  "wrappers": ["table-wrapper"]
}