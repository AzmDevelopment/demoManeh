{
  "certificationId": "pharmaceuticals_local_products",
  "title": "Pharmaceuticals - Local Products Form",
  "fields": [
    {
      "key": "drugCategory",
      "type": "select",
      "templateOptions": {
        "label": "Drug Category",
        "required": true,
        "options": [
          { "label": "Prescription Medicines", "value": "prescription" },
          { "label": "Over-the-Counter (OTC)", "value": "otc" },
          { "label": "Vitamins & Supplements", "value": "vitamins" },
          { "label": "Medical Devices", "value": "devices" },
          { "label": "Herbal/Traditional", "value": "herbal" }
        ],
        "placeholder": "Select drug category"
      },
      "hooks": {
        "onChanges": "onDrugCategoryChange"
      },
      "validation": {
        "messages": {
          "required": "Drug category selection is mandatory"
        }
      }
    },
    {
      "key": "genericName",
      "type": "input",
      "templateOptions": {
        "label": "Generic Name",
        "required": true,
        "placeholder": "Enter generic/scientific name"
      },
      "hideExpression": "!model.drugCategory",
      "validation": {
        "messages": {
          "required": "Generic name is required"
        }
      }
    },
    {
      "key": "brandName",
      "type": "input",
      "templateOptions": {
        "label": "Brand Name",
        "required": true,
        "placeholder": "Enter brand/trade name"
      },
      "hideExpression": "!model.drugCategory"
    },
    {
      "key": "dosageForm",
      "type": "select",
      "templateOptions": {
        "label": "Dosage Form",
        "required": true,
        "options": [
          { "label": "Tablet", "value": "tablet" },
          { "label": "Capsule", "value": "capsule" },
          { "label": "Syrup/Liquid", "value": "syrup" },
          { "label": "Injection", "value": "injection" },
          { "label": "Cream/Ointment", "value": "topical" },
          { "label": "Inhaler", "value": "inhaler" },
          { "label": "Drops", "value": "drops" }
        ],
        "placeholder": "Select dosage form"
      },
      "hideExpression": "!model.genericName"
    },
    {
      "key": "strength",
      "type": "input",
      "templateOptions": {
        "label": "Strength/Concentration",
        "required": true,
        "placeholder": "e.g., 500mg, 10mg/ml"
      },
      "hideExpression": "!model.dosageForm"
    },
    {
      "key": "packSize",
      "type": "input",
      "templateOptions": {
        "label": "Pack Size",
        "placeholder": "e.g., 30 tablets, 100ml"
      },
      "hideExpression": "!model.strength"
    },
    {
      "key": "storageCondition",
      "type": "select",
      "templateOptions": {
        "label": "Storage Condition",
        "required": true,
        "options": [
          { "label": "Room Temperature (15-25°C)", "value": "room" },
          { "label": "Refrigerated (2-8°C)", "value": "cold" },
          { "label": "Frozen (-20°C)", "value": "frozen" },
          { "label": "Protected from Light", "value": "light_protected" }
        ],
        "placeholder": "Select storage condition"
      },
      "hideExpression": "!model.dosageForm"
    },
    {
      "key": "shelfLife",
      "type": "input",
      "templateOptions": {
        "label": "Shelf Life (months)",
        "type": "number",
        "min": 1,
        "required": true,
        "placeholder": "Enter shelf life"
      },
      "validators": {
        "validation": ["positiveNumber"]
      },
      "hideExpression": "!model.storageCondition"
    },
    {
      "key": "manufacturingLicense",
      "type": "input",
      "templateOptions": {
        "label": "Manufacturing License No.",
        "required": true,
        "placeholder": "Enter license number"
      },
      "hideExpression": "!model.drugCategory"
    },
    {
      "key": "batchNumber",
      "type": "input",
      "templateOptions": {
        "label": "Batch Number",
        "placeholder": "Enter batch/lot number"
      },
      "hideExpression": "!model.manufacturingLicense"
    },
    {
      "key": "costPrice",
      "type": "input",
      "templateOptions": {
        "label": "Cost Price per Unit",
        "type": "number",
        "min": 0,
        "step": "0.01",
        "required": true
      },
      "validators": {
        "validation": ["positiveNumber"]
      },
      "validation": {
        "messages": {
          "required": "Cost price is required"
        }
      },
      "hideExpression": "!model.drugCategory"
    },
    {
      "key": "vatCategory",
      "type": "select",
      "templateOptions": {
        "label": "VAT Category",
        "options": [],
        "placeholder": "Select VAT rate"
      },
      "hideExpression": "!model.costPrice"
    }
  ]
}
