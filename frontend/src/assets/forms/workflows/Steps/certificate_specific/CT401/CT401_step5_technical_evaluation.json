        "required": true
      }
    },
    {
      "key": "safetyAssessment",
      "type": "radio",
      "templateOptions": {
        "label": "Safety Assessment",
        "required": true,
        "options": [
          { "value": "compliant", "label": "Compliant with Standards" },
          { "value": "non_compliant", "label": "Non-Compliant" },
          { "value": "requires_modification", "label": "Requires Modification" }
        ]
      }
    },
    {
      "key": "technicalNotes",
      "type": "textarea",
      "templateOptions": {
        "label": "Technical Notes",
