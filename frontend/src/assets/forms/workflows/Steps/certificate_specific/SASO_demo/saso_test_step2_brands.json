{
  "stepId": "saso_test_step2_brands",
  "name": "Brand Management",
  "actor": "customer",
  "description": "Select existing brands or add new ones for your products",

  "schema": {
    "type": "object",
    "properties": {
      "selectedBrand": {
        "type": "string",
        "title": "Select Existing Brand"
      },
      "brandTable": {
        "type": "array",
        "title": "Selected Brands",
        "items": {
          "type": "object",
          "properties": {
            "nameEn": {
              "type": "string",
              "title": "Brand (English)"
            },
            "nameAr": {
              "type": "string",
              "title": "Brand (Arabic)"
            },
            "source": {
              "type": "string",
              "title": "Source"
            }
          },
          "required": ["nameEn", "nameAr"]
        }
      },
      "newBrandNameEn": {
        "type": "string",
        "title": "Brand Name (English)",
        "maxLength": 100
      },
      "newBrandNameAr": {
        "type": "string",
        "title": "Brand Name (Arabic)",
        "maxLength": 100
      }
    }
  },

  "uischema": {
    "type": "VerticalLayout",
    "elements": [
      {
        "type": "Control",
        "scope": "#/properties/selectedBrand",
        "label": "Select Existing Brand",
        "options": {
          "placeholder": "Choose a brand to add...",
          "autocomplete": false
        }
      },
      {
        "type": "Control",
        "scope": "#/properties/brandTable",
        "label": "Selected Brands",
        "options": {
          "showSortButtons": false,
          "detail": {
            "type": "HorizontalLayout",
            "elements": [
              {
                "type": "Control",
                "scope": "#/properties/nameEn"
              },
              {
                "type": "Control",
                "scope": "#/properties/nameAr"
              },
              {
                "type": "Control",
                "scope": "#/properties/source"
              }
            ]
          }
        }
      },
      {
        "type": "Group",
        "label": "Add New Brand",
        "elements": [
          {
            "type": "HorizontalLayout",
            "elements": [
              {
                "type": "Control",
                "scope": "#/properties/newBrandNameEn",
                "label": "Brand Name (English)",
                "options": {
                  "placeholder": "Enter brand name in English"
                }
              },
              {
                "type": "Control",
                "scope": "#/properties/newBrandNameAr",
                "label": "Brand Name (Arabic)",
                "options": {
                  "placeholder": "أدخل اسم العلامة التجارية بالعربية"
                }
              }
            ]
          }
        ]
      }
    ]
  },

  "hooks": {
    "onInit": ["loadBrands"],
    "onChange": {
      "selectedBrand": "onBrandSelected"
    }
  },

  "stepConfig": {
    "canSendBack": true,
    "nextStep": "saso_test_step3_products",
    "estimatedDurationHours": 24,
    "validation": {
      "type": "brandTable",
      "minRequired": 1,
      "message": "Please select at least one brand or add a new one before proceeding"
    }
  }
}
