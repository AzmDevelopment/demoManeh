{
  "stepId": "saso_test_step2_brands",
  "name": "Brand Management",
  "actor": "customer",
  "description": "Select existing brands or add new ones for your products",

  "schema": {
    "type": "object",
    "properties": {
      "selectedBrand": {
        "type": "string",
        "title": "Select Existing Brand"
      },
      "brandTable": {
        "type": "array",
        "title": "Selected Brands",
        "items": {
          "type": "object",
          "properties": {
            "nameEn": {
              "type": "string",
              "title": "Brand Name (English)"
            },
            "nameAr": {
              "type": "string",
              "title": "Brand Name (Arabic)"
            },
            "source": {
              "type": "string",
              "title": "Source"
            }
          },
          "required": ["nameEn", "nameAr"]
        }
      },
      "showNewBrandForm": {
        "type": "boolean",
        "title": "Show New Brand Form",
        "default": false
      },
      "newBrandNameEn": {
        "type": "string",
        "title": "Brand Name (English)",
        "maxLength": 100
      },
      "newBrandNameAr": {
        "type": "string",
        "title": "Brand Name (Arabic)",
        "maxLength": 100
      }
    }
  },

  "uischema": {
    "type": "VerticalLayout",
    "elements": [
      {
        "type": "Control",
        "scope": "#/properties/selectedBrand",
        "label": "Select Existing Brand",
        "options": {
          "placeholder": "Choose a brand to add..."
        }
      },
      {
        "type": "Control",
        "scope": "#/properties/brandTable",
        "label": "Selected Brands",
        "options": {
          "showSortButtons": false,
          "detail": "DEFAULT"
        }
      },
      {
        "type": "Group",
        "label": "Add New Brand",
        "elements": [
          {
            "type": "HorizontalLayout",
            "elements": [
              {
                "type": "Control",
                "scope": "#/properties/newBrandNameEn",
                "label": "Brand Name (English)",
                "options": {
                  "placeholder": "Enter brand name in English"
                }
              },
              {
                "type": "Control",
                "scope": "#/properties/newBrandNameAr",
                "label": "Brand Name (Arabic)",
                "options": {
                  "placeholder": "Ø£Ø¯Ø®Ù„ Ø§Ø³Ù… Ø§Ù„Ø¹Ù„Ø§Ù…Ø© Ø§Ù„ØªØ¬Ø§Ø±ÙŠØ© Ø¨Ø§Ù„Ø¹Ø±Ø¨ÙŠØ©"
                }
              }
            ]
          },
          {
            "type": "CustomButton",
            "label": "ðŸ’¾ Save Brand",
            "hookName": "saveNewBrand",
            "buttonClass": "btn-primary",
            "validateHook": "canSaveNewBrand"
          }
        ]
      }
    ]
  },

  "hooks": {
    "onInit": ["loadBrands"],
    "onChange": {
      "selectedBrand": "onBrandSelected"
    }
  },

  "stateMachine": {
    "initialStatus": "not_started",
    "allowedEvents": ["Enter", "Save", "Submit", "GoBack"],
    "transitions": {
      "onEnter": { "from": "not_started", "to": "active" },
      "onSave": { "from": ["active", "in_progress"], "to": "in_progress" },
      "onSubmit": { "from": ["active", "in_progress"], "to": "completed" },
      "onGoBack": { "from": ["active", "in_progress"], "to": "active" }
    },
    "requiredForSubmit": ["brandTable"],
    "canGoBack": true
  },

  "context": {
    "provides": ["brandTable"],
    "requires": ["selectedTypeValue"]
  },

  "stepConfig": {
    "canSendBack": true,
    "nextStep": "saso_test_step3_products",
    "previousStep": "saso_test_step1_types",
    "estimatedDurationHours": 24,
    "validation": {
      "type": "brandTable",
      "minRequired": 1,
      "message": "Please select at least one brand or add a new one before proceeding"
    }
  }
}
