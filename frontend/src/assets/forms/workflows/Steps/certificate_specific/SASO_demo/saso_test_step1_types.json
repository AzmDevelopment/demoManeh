{
  "stepId": "saso_test_step1_types",
  "name": "Type Selection",
  "actor": "customer",
  "description": "Select the certification type for your product",

  "schema": {
    "type": "object",
    "properties": {
      "selectedType": {
        "type": "string",
        "title": "Certification Type"
      },
      "applicantName": {
        "type": "string",
        "title": "Applicant Name",
        "maxLength": 200
      },
      "applicantEmail": {
        "type": "string",
        "title": "Email Address",
        "format": "email"
      },
      "applicantPhone": {
        "type": "string",
        "title": "Phone Number"
      },
      "comments": {
        "type": "string",
        "title": "Additional Comments",
        "maxLength": 1000
      }
    },
    "required": ["selectedType", "applicantName", "applicantEmail"]
  },

  "uischema": {
    "type": "VerticalLayout",
    "elements": [
      {
        "type": "Control",
        "scope": "#/properties/selectedType",
        "label": "Certification Type",
        "options": {
          "placeholder": "Choose a certification type..."
        }
      },
      {
        "type": "Control",
        "scope": "#/properties/applicantName",
        "label": "Applicant Name",
        "options": {
          "placeholder": "Enter your company or organization name"
        }
      },
      {
        "type": "HorizontalLayout",
        "elements": [
          {
            "type": "Control",
            "scope": "#/properties/applicantEmail",
            "label": "Email Address",
            "options": {
              "placeholder": "Enter your email address"
            }
          },
          {
            "type": "Control",
            "scope": "#/properties/applicantPhone",
            "label": "Phone Number",
            "options": {
              "placeholder": "Enter your phone number"
            }
          }
        ]
      },
      {
        "type": "Control",
        "scope": "#/properties/comments",
        "label": "Additional Comments",
        "options": {
          "multi": true,
          "placeholder": "Enter any additional information or special requirements..."
        }
      }
    ]
  },

  "hooks": {
    "onInit": ["loadTypes"]
  },

  "stepConfig": {
    "canSendBack": false,
    "nextStep": "saso_test_step2_brands",
    "estimatedDurationHours": 24
  }
}
