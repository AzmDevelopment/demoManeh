{
  "certificationId": "CT401_lithium_battery_new",
  "name": "CT401 Lithium Battery - New Certificate Application",
  "description": "Complete 4-step workflow for CT401 lithium battery certification",
  "version": "1.0",
  
  "metadata": {
    "workflowCode": "CT401",
    "applicableCertificateTypes": ["lithium_battery", "lithium_polymer"],
    "estimatedTotalDurationDays": 7,
    "complexity": "medium",
    "requiresFactoryVisit": false
  },
  
  "steps": [
    {
      "stepRef": "workflows/Steps/certificate_specific/CT401_new/CT401_step1_data_entry",
      "overrides": {
        "nextStep": "CT401_step2_document_upload"
      }
    },
    {
      "stepRef": "workflows/Steps/certificate_specific/CT401_new/CT401_step2_document_upload",
      "overrides": {
        "nextStep": "CT401_step3_initial_review"
      }
    },
    {
      "stepRef": "workflows/Steps/certificate_specific/CT401_new/CT401_step3_initial_review",
      "overrides": {
        "nextStep": "CT401_step4_factory_inspection"
      }
    },
    {
      "stepRef": "workflows/Steps/certificate_specific/CT401_new/CT401_step4_factory_inspection",
      "overrides": {
        "nextStep": "CT401_step5_technical_evaluation"
      }
    },
     {
      "stepRef": "workflows/Steps/certificate_specific/CT401_new/CT401_step5_technical_evaluation",
      "overrides": {
        "nextStep": "CT401_step6_final_approval"
      }
    },
     {
      "stepRef": "workflows/Steps/certificate_specific/CT401_new/CT401_step6_final_approval",
      "overrides": {
        "nextStep": "completed"
      }
    },
    {
      "stepId": "completed",
      "name": "Certificate Issued",
      "actor": "system",
      "type": "system_action",
      "systemAction": "generateCertificatePdf",
      "status": "completed"
    }
  ],
  
  "workflowConfig": {
    "isLinear": true,
    "allowParallelExecution": false,
    "requiresApprovalAtEachStep": false,
    "autoEscalationEnabled": true
  },
  
  "slaConfig": {
    "totalSLADays": 7,
    "stepSLAs": {
      "CT401_data_entry_step1": 24,
      "CT401_document_upload_step2": 48,
      "CT401_initial_review": 24,
      "CT401_final_approval": 24
    }
  },
  
  "notifications": {
    "onStepComplete": true,
    "onWorkflowComplete": true,
    "onSendBack": true,
    "recipients": ["applicant", "assignedActor", "supervisor"]
  },
  
  "permissions": {
    "customer": {
      "canStartWorkflow": true,
      "canEditSteps": ["CT401_data_entry_step1", "CT401_document_upload_step2"],
      "canSendBack": false,
      "canCancel": true
    },
    "inspector": {
      "canEditSteps": ["CT401_initial_review"],
      "canSendBack": true,
      "canRequestInfo": true
    },
    "manager": {
      "canEditSteps": ["CT401_final_approval"],
      "canApprove": true,
      "canReject": true,
      "canSendBack": true,
      "canReassign": true
    }
  },
  
  "integrations": {
    "documentManagement": {
      "required": true,
      "autoArchive": true,
      "retentionYears": 5
    },
    "notificationService": {
      "email": true,
      "sms": false,
      "portal": true
    }
  }
}
