{
  "certificationId": "textiles_local_products",
  "title": "Textiles - Local Products Form",
  "fields": [
    {
      "key": "textileCategory",
      "type": "select",
      "templateOptions": {
        "label": "Textile Category",
        "required": true,
        "options": [
          { "label": "Apparel Fabric", "value": "apparel" },
          { "label": "Home Textiles", "value": "home" },
          { "label": "Technical Textiles", "value": "technical" },
          { "label": "Industrial Textiles", "value": "industrial" }
        ],
        "placeholder": "Select textile category"
      },
      "hooks": {
        "onChanges": "onCategoryChange"
      },
      "validation": {
        "messages": {
          "required": "Textile category selection is mandatory"
        }
      }
    },
    {
      "key": "fabricType",
      "type": "select",
      "templateOptions": {
        "label": "Fabric Type",
        "required": true,
        "options": [
          { "label": "Cotton", "value": "cotton" },
          { "label": "Polyester", "value": "polyester" },
          { "label": "Silk", "value": "silk" },
          { "label": "Wool", "value": "wool" },
          { "label": "Linen", "value": "linen" },
          { "label": "Blend", "value": "blend" }
        ],
        "placeholder": "Select fabric type"
      },
      "hideExpression": "!model.textileCategory"
    },
    {
      "key": "blendComposition",
      "type": "input",
      "templateOptions": {
        "label": "Blend Composition",
        "placeholder": "e.g., 60% Cotton, 40% Polyester"
      },
      "hideExpression": "model.fabricType !== 'blend'"
    },
    {
      "key": "weaveType",
      "type": "select",
      "templateOptions": {
        "label": "Weave Type",
        "options": [
          { "label": "Plain Weave", "value": "plain" },
          { "label": "Twill Weave", "value": "twill" },
          { "label": "Satin Weave", "value": "satin" },
          { "label": "Knit", "value": "knit" }
        ],
        "placeholder": "Select weave type"
      },
      "hideExpression": "!model.fabricType"
    },
    {
      "key": "weight",
      "type": "input",
      "templateOptions": {
        "label": "Fabric Weight (GSM)",
        "type": "number",
        "min": 1,
        "required": true,
        "placeholder": "Enter fabric weight"
      },
      "validators": {
        "validation": ["positiveNumber"]
      },
      "hideExpression": "!model.fabricType"
    },
    {
      "key": "width",
      "type": "input",
      "templateOptions": {
        "label": "Fabric Width (cm)",
        "type": "number",
        "min": 1,
        "placeholder": "Enter fabric width"
      },
      "hideExpression": "!model.weight"
    },
    {
      "key": "color",
      "type": "input",
      "templateOptions": {
        "label": "Color/Pattern",
        "placeholder": "Enter color or pattern name"
      },
      "hideExpression": "!model.weight"
    },
    {
      "key": "certification",
      "type": "select",
      "templateOptions": {
        "label": "Quality Certification",
        "options": [
          { "label": "None", "value": "none" },
          { "label": "OEKO-TEX", "value": "oeko_tex" },
          { "label": "GOTS (Organic)", "value": "gots" },
          { "label": "ISO 9001", "value": "iso_9001" }
        ],
        "placeholder": "Select certification"
      },
      "hideExpression": "!model.weight"
    },
    {
      "key": "costPrice",
      "type": "input",
      "templateOptions": {
        "label": "Cost Price per Meter",
        "type": "number",
        "min": 0,
        "step": "0.01",
        "required": true
      },
      "validators": {
        "validation": ["positiveNumber"]
      },
      "validation": {
        "messages": {
          "required": "Cost price is required"
        }
      },
      "hideExpression": "!model.textileCategory"
    },
    {
      "key": "vatCategory",
      "type": "select",
      "templateOptions": {
        "label": "VAT Category",
        "options": [],
        "placeholder": "Select VAT rate"
      },
      "hideExpression": "!model.costPrice"
    }
  ]
}
