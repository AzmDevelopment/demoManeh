{
  "certificationId": "beauty_local_products",
  "title": "Beauty - Local Products Form",
  "fields": [
    {
      "key": "productCategory",
      "type": "select",
      "templateOptions": {
        "label": "Product Category",
        "required": true,
        "options": [
          { "label": "Skincare", "value": "skincare" },
          { "label": "Haircare", "value": "haircare" },
          { "label": "Makeup", "value": "makeup" },
          { "label": "Fragrance", "value": "fragrance" },
          { "label": "Personal Care", "value": "personal_care" }
        ],
        "placeholder": "Select product category"
      },
      "hooks": {
        "onChanges": "onCategoryChange"
      },
      "validation": {
        "messages": {
          "required": "Product category selection is mandatory"
        }
      }
    },
    {
      "key": "productName",
      "type": "input",
      "templateOptions": {
        "label": "Product Name",
        "required": true,
        "placeholder": "Enter product name"
      },
      "hideExpression": "!model.productCategory",
      "validation": {
        "messages": {
          "required": "Product name is required"
        }
      }
    },
    {
      "key": "brandName",
      "type": "input",
      "templateOptions": {
        "label": "Brand Name",
        "required": true,
        "placeholder": "Enter brand name"
      },
      "hideExpression": "!model.productCategory"
    },
    {
      "key": "skinType",
      "type": "select",
      "templateOptions": {
        "label": "Target Skin Type",
        "options": [
          { "label": "All Skin Types", "value": "all" },
          { "label": "Normal", "value": "normal" },
          { "label": "Dry", "value": "dry" },
          { "label": "Oily", "value": "oily" },
          { "label": "Combination", "value": "combination" },
          { "label": "Sensitive", "value": "sensitive" }
        ],
        "placeholder": "Select target skin type"
      },
      "hideExpression": "model.productCategory !== 'skincare'"
    },
    {
      "key": "hairType",
      "type": "select",
      "templateOptions": {
        "label": "Target Hair Type",
        "options": [
          { "label": "All Hair Types", "value": "all" },
          { "label": "Normal", "value": "normal" },
          { "label": "Dry", "value": "dry" },
          { "label": "Oily", "value": "oily" },
          { "label": "Damaged", "value": "damaged" },
          { "label": "Color Treated", "value": "color_treated" }
        ],
        "placeholder": "Select target hair type"
      },
      "hideExpression": "model.productCategory !== 'haircare'"
    },
    {
      "key": "volume",
      "type": "input",
      "templateOptions": {
        "label": "Volume/Weight",
        "placeholder": "e.g., 100ml, 50g"
      },
      "hideExpression": "!model.productName"
    },
    {
      "key": "ingredients",
      "type": "input",
      "templateOptions": {
        "label": "Key Ingredients",
        "placeholder": "List main ingredients"
      },
      "hideExpression": "!model.productName"
    },
    {
      "key": "expiryMonths",
      "type": "input",
      "templateOptions": {
        "label": "Shelf Life (months)",
        "type": "number",
        "min": 1,
        "required": true,
        "placeholder": "Enter shelf life in months"
      },
      "validators": {
        "validation": ["positiveNumber"]
      },
      "hideExpression": "!model.productName"
    },
    {
      "key": "costPrice",
      "type": "input",
      "templateOptions": {
        "label": "Cost Price",
        "type": "number",
        "min": 0,
        "step": "0.01",
        "required": true
      },
      "validators": {
        "validation": ["positiveNumber"]
      },
      "validation": {
        "messages": {
          "required": "Cost price is required"
        }
      },
      "hideExpression": "!model.productCategory"
    },
    {
      "key": "vatCategory",
      "type": "select",
      "templateOptions": {
        "label": "VAT Category",
        "options": [],
        "placeholder": "Select VAT rate"
      },
      "hideExpression": "!model.costPrice"
    }
  ]
}
